<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.EmployeeController">
   <left>
      <VBox styleClass="sidebar" spacing="10.0">
         <children>
            <Label text="EMS" styleClass="sidebar-title">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </Label>
            <Button fx:id="dashboardBtn" text="Dashboard" styleClass="sidebar-button" onAction="#handleDashboard" />
            <Button fx:id="employeesBtn" text="Employees" styleClass="sidebar-button-active" onAction="#showEmployees" />
            <Button fx:id="departmentsBtn" text="Departments" styleClass="sidebar-button" onAction="#handleDepartments" />
            <Button fx:id="leavesBtn" text="Leave Requests" styleClass="sidebar-button" onAction="#handleLeaves" />
            <Region VBox.vgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <VBox spacing="15.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="header">
               <children>
                  <Label text="Employee Management" styleClass="page-title">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="addButton" mnemonicParsing="false" onAction="#handleAdd" text="âž• Add Employee" styleClass="primary-button" />
               </children>
               <padding>
                  <Insets bottom="15.0" left="30.0" right="30.0" top="15.0" />
               </padding>
            </HBox>
            <TableView fx:id="employeeTable" styleClass="data-table">
               <columns>
                  <TableColumn fx:id="nameColumn" prefWidth="180.0" text="Name" />
                  <TableColumn fx:id="emailColumn" prefWidth="220.0" text="Email" />
                  <TableColumn fx:id="positionColumn" prefWidth="150.0" text="Position" />
                  <TableColumn fx:id="departmentColumn" prefWidth="150.0" text="Department" />
                  <TableColumn fx:id="hireDateColumn" prefWidth="130.0" text="Hire Date" />
                  <TableColumn fx:id="actionsColumn" prefWidth="180.0" text="Actions" />
               </columns>
            </TableView>
            <HBox alignment="CENTER" spacing="10.0" styleClass="action-bar">
               <children>
                  <Button fx:id="editButton" mnemonicParsing="false" onAction="#handleEdit" text="âœï¸ Edit" styleClass="action-button" />
                  <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDelete" text="ðŸ—‘ï¸ Delete" styleClass="danger-button" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
